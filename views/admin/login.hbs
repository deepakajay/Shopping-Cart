
<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
        <script class="fadeIn third" src="https://cdn.lordicon.com/libs/mssddfmo/lord-icon-2.1.0.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/wrprwmwt.json"
    trigger="loop"
    colors="primary:#121331,secondary:#08a88a"
    stroke="55"
    style="width:200px;height:250px">
</lord-icon>
      <img src="/images/DeKart-logos_black.png" id="icon" alt="User Icon" / style="width: 176px;height: 176px;color:orangered" class="fadein third">
    </div>

    <!-- Login Form -->
    <form action="/admin/adminLogin" method="POST">
    {{#if loginErr}}
                <p class="error fadeIn second" style="color: orangered;">Invalid Username or Password</p>
    {{/if}}
      <input type="text" id="login" class="fadeIn second" name="Email" placeholder="Admin email">
      <input type="text" id="password" class="fadeIn third" name="Password" placeholder="Password">
      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
        <img src="/images/admin.png" style="width: 50px;height: 50px;">
      <h2>ADMIN MODE</h2>
    </div>

  </div>
</div>